# main.kv

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Screen 1'
            on_press: root.switch_screen('screen1')
        Button:
            text: 'Screen 2'
            on_press: root.switch_screen('screen2')
        Button:
            text: 'Screen 3'
            on_press: root.switch_screen('screen3')
        Button:
            text: 'Screen 4'
            on_press: root.switch_screen('screen4')
        Button:
            text: 'Exit'
            on_press: app.stop()

<Screen1>:
    name: 'screen1'
    Label:
        text: 'This is Screen 1'

<Screen2>:
    name: 'screen2'
    Label:
        text: 'This is Screen 2'

<Screen3>:
    name: 'screen3'
    Label:
        text: 'This is Screen 3'

<Screen4>:
    name: 'screen4'
    Label:
        text: 'This is Screen 4'
